<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="mobomobo.dao.face.BookFamousLineDao">
  	<select id="selectCntAll" resultType="int">
		 SELECT COUNT(*) FROM bookbest
  	</select>
  	<select id="selectList" resultType="mobomobo.dto.BookBest" parameterType="mobomobo.util.BookBestPaging">
  		SELECT * FROM(
		 	SELECT rownum rnum,B.* FROM(
		 		SELECT *
		 		FROM bookbest
		 		ORDER BY bookbestno DESC
		 		)B
		 	) BOARD
	 	WHERE rnum BETWEEN #{startNo } AND #{endNo }
  	</select>
  	<insert id="insertBookBest" parameterType="mobomobo.dto.BookBest">
  		INSERT INTO bookbest(bookbestno, userno,besttitle,bestcontext,booktitle,bookauthor,publicationdate)
  		VALUES(BOOKBEST_SEQ.nextval, #{userno },#{bestTitle },#{bestContext },#{bookTitle },#{bookAuthor },#{publicationDate })
  	</insert>
  
  
  
  </mapper>
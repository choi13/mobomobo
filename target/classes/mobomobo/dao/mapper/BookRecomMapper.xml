  <mapper namespace="mobomobo.dao.face.BookRecomDao">
  	
  	<select id="selectBookStarRating" resultType="HashMap" parameterType="String">
  	
	  	SELECT avg(starrating) AS AVG FROM bookstarrating 
	  	WHERE isbn = #{isbn }
	  	
  	
  	</select>
  	
